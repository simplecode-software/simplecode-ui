{
  "name": "simplecode-ui",
  "version": "0.20.1",
  "private": true,
  "main": "./dist/index.min.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build-watch": "rollup -c -w",
    "check-licenses": "license-checker --production --exclude 'MIT,ISC' --json --out doc/licenses.json",
    "dep-all": "npm run dep-components",
    "dep-components": "depcruise -c conf/dep-components.js -T dot src | dot -T svg > doc/dep-graphs/dep-components.svg",
    "doc-server": "http-server doc -c-1 -o || npm i -g http-server && http-server doc -c-1 -o",
    "doc": "npm run ts-coverage && npm run test-coverage && npm run dep-all && npm run jscpd && npm run storybook && npm run web && npm run view-tree-build",
    "dslint": "depcruise -c conf/dep-common.js -T err-long src",
    "eslint": "eslint ./src && eslint ./src-web && eslint ./storybook",
    "eslint-fix": "eslint ./src --fix",
    "install-e2e": "cd e2e && npm ci && cd ..",
    "install-storybook": "cd storybook && npm ci && cd ..",
    "jscpd": "jscpd ./src --config conf/jscpd.json",
    "lint-all": "npm run eslint && npm run dslint",
    "storybook-dev": "cd storybook && npm start && cd ..",
    "storybook": "cd storybook && npm run build && cd ..",
    "test-all": "jest --runInBand --detectOpenHandles --verbose --coverage=false --config conf/jest.json --forceExit",
    "test-ci": "jest --max_old_space_size=4096 --ci --runInBand --coverage=false --config conf/jest.json --forceExit --detectOpenHandles",
    "test-coverage": "rm -rf doc/jest && jest --coverage --silent --config conf/jest.json --detectOpenHandles --forceExit",
    "test-debug": "node --no-compilation-cache --inspect --inspect-brk --expose-gc --trace_gc ./node_modules/jest/bin/jest.js --restoreMocks --runInBand --detectOpenHandles --testPathPattern='src/screens' --logHeapUsage --verbose --coverage=false --config conf/jest.json",
    "test-e2e-ci": "cd e2e && npm run test && cd ..",
    "test-e2e": "cd e2e && npm start && cd ..",
    "test-vscode": "jest --maxWorkers=50% --silent --config conf/jest.json",
    "test": "jest --watch --coverage=false --config=conf/jest.json",
    "ts-coverage-run": "typescript-coverage-report -o doc/ts-coverage >nul",
    "ts-coverage": "rm -rf doc/ts-coverage && npm run ts-coverage-run"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "re-reselect": "^4.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "~7.20.7",
    "@babel/core": "~7.20.12",
    "@babel/plugin-transform-runtime": "~7.19.6",
    "@babel/preset-env": "~7.20.2",
    "@babel/preset-react": "~7.18.6",
    "@emotion/babel-preset-css-prop": "~11.10.0",
    "@emotion/core": "~11.0.0",
    "@emotion/react": "^11.10.6",
    "@rollup/plugin-babel": "~6.0.3",
    "@rollup/plugin-commonjs": "~24.0.1",
    "@rollup/plugin-node-resolve": "~15.0.1",
    "@testing-library/jest-dom": "~5.16.5",
    "@testing-library/react": "~14.0.0",
    "@testing-library/user-event": "~14.4.3",
    "@types/jest": "^29.4.0",
    "@types/react": "~18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/rollup-plugin-peer-deps-external": "~2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "dependency-cruiser": "^12.10.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.2",
    "jscpd": "^3.5.3",
    "re-reselect": "~4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-test-renderer": "^18.2.0",
    "reselect": "~4.1.7",
    "rollup": "~2.79.1",
    "rollup-plugin-delete": "~2.0.0",
    "rollup-plugin-peer-deps-external": "~2.2.4",
    "rollup-plugin-typescript2": "~0.34.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "ts-jest": "^29.0.5",
    "tslib": "~2.5.0",
    "typescript": "~4.9.5",
    "typescript-coverage-report": "^0.7.0"
  }
}
